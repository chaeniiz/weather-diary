<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_500"
    android:orientation="vertical"
    android:padding="@dimen/spacing_500">

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="나는 지금," />

    <TextView
        android:id="@+id/seoulTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/seoul"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toStartOf="@+id/incheonTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <TextView
        android:id="@+id/incheonTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/incheon"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toStartOf="@+id/daejeonTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seoulTextView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <TextView
        android:id="@+id/daejeonTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/daejeon"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/incheonTextView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <TextView
        android:id="@+id/gwangjuTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/gwangju"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toStartOf="@+id/busanTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seoulTextView" />

    <TextView
        android:id="@+id/busanTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/busan"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toStartOf="@+id/daeguTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gwangjuTextView"
        app:layout_constraintTop_toBottomOf="@+id/seoulTextView" />

    <TextView
        android:id="@+id/daeguTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/daegu"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/busanTextView"
        app:layout_constraintTop_toBottomOf="@+id/seoulTextView" />

    <TextView
        android:id="@+id/ulsanTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/ulsan"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toStartOf="@+id/jejuTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gwangjuTextView" />

    <TextView
        android:id="@+id/jejuTextView"
        style="@style/Typography.400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_500"
        android:text="@string/jeju"
        android:textColor="@drawable/selector_write_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ulsanTextView"
        app:layout_constraintTop_toBottomOf="@+id/gwangjuTextView" />

    <ProgressBar
        android:id="@+id/dialogProgressBar"
        android:layout_width="@dimen/spacing_800"
        android:layout_height="@dimen/spacing_800"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
