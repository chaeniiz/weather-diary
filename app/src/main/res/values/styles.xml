<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherDiaryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="alertDialogTheme">@style/WeatherDiaryDialogTheme</item>
    </style>

    <style name="WeatherDiaryDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/Typography.250</item>
        <item name="android:textAppearanceMedium">@style/Typography.300</item>
        <item name="android:textAppearanceLarge">@style/Typography.400</item>
        <item name="android:textAppearance">@style/Typography.250</item>
        <item name="android:buttonStyle">@style/Typography.250</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WeatherDiaryDialogActivityTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textAppearanceSmall">@style/Typography.250</item>
        <item name="android:textAppearanceMedium">@style/Typography.300</item>
        <item name="android:textAppearanceLarge">@style/Typography.400</item>
        <item name="android:textAppearance">@style/Typography.250</item>
        <item name="android:buttonStyle">@style/Typography.250</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
